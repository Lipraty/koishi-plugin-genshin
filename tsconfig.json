{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "module": "ESNext",
        "allowJs": true,
        "composite": true,
        "declaration": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strictBindCallApply": true,
        "paths": {
            "koishi-plugin-paimon": [
                "src"
            ],
        }
